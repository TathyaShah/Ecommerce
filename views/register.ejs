<% include ./partials/header.ejs %>
    <div class="flex min-h-screen items-center justify-center bg-blue-400">
        <div
            class="bg-white w-[90vw] sm:w-[60vw] md:w-[50vw] lg:w-[60vw] h-auto flex rounded-[20px] shadow-lg overflow-hidden">
            <!-- Left section with image and text -->
            <div class="hidden lg:flex w-1/2 bg-blue-200 items-center justify-center flex-col p-10">
                <img src="/images/7674006-removebg-preview.png" class="w-[80%]" alt="Illustration">
                <p class="text-lg mt-8 text-center text-blue-700 font-semibold">Start for free and get attractive
                    offers.</p>
            </div>

            <!-- Right section with form -->
            <div class="w-full lg:w-1/2 p-10">
                <h1 class="text-2xl sm:text-3xl mb-6 font-semibold text-gray-700 text-center">Create New Account</h1>
                <form action="/register" method="post" class="space-y-5">
                    <input
                        class="border-[2px] rounded-md block px-4 py-3 w-full focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                        type="text" name="name" placeholder="Name">
                    <input
                        class="border-[2px] rounded-md block px-4 py-3 w-full focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                        type="text" name="username" placeholder="Username">
                    <input
                        class="border-[2px] rounded-md block px-4 py-3 w-full focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                        type="email" name="email" placeholder="Email">
                    <input
                        class="border-[2px] rounded-md block px-4 py-3 w-full focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                        type="tel" name="mobile" placeholder="Phone Number">
                    <input
                        class="border-[2px] rounded-md block px-4 py-3 w-full focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                        type="password" name="password" placeholder="Password">
                    <input
                        class="block px-4 py-3 w-full bg-blue-600 text-white rounded-lg cursor-pointer hover:bg-blue-500 transition duration-150"
                        type="submit" value="Register">
                </form>
                <a href="/login" class="block text-center mt-6 text-blue-600 hover:underline">Already have an
                    account?</a>
            </div>
        </div>
    </div>

    <script>
        const urlParams = new URLSearchParams(window.location.search);
        const message = urlParams.get('message');

        if (message) {
            Swal.fire({
                icon: 'error',
                title: 'Oops!',
                text: decodeURIComponent(message.replace(/\+/g, ' ')),
                timer: 2500,
                showConfirmButton: false
            });
        }      
    </script>
    <% include ./partials/footer.ejs %>