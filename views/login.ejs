<% include ./partials/header.ejs %>
    <div class="flex min-h-screen items-center justify-center bg-red-400">
        <div
            class="bg-white w-[90vw] sm:w-[60vw] md:w-[50vw] lg:w-[60vw] h-auto flex rounded-[20px] shadow-lg overflow-hidden">
            <!-- Left section with image and text -->
            <div class="hidden lg:flex w-1/2 bg-red-200 items-center justify-center flex-col p-10">
                <img src="/images/7674006-removebg-preview.png" class="w-[80%]" alt="Illustration">
                <p class="text-lg mt-8 text-center text-orange-700 font-semibold">Start for free and get attractive
                    offers.</p>
            </div>

            <!-- Right section with form -->
            <div class="w-full lg:w-1/2 p-10">
                <h1 class="text-2xl sm:text-3xl mb-6 font-semibold text-gray-700 text-center">Welcome to E-commerce</h1>
                <form action="/login" method="post" class="space-y-5">
                    <input
                        class=" border-[2px] rounded-md block px-4 py-3 w-full focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
                        type="text" name="email" placeholder="Email">
                    <input
                        class="border-[2px] rounded-md block px-4 py-3 w-full focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
                        type="password" name="password" placeholder="Password">
                    <input
                        class="block px-4 py-3 w-full bg-orange-600 text-white rounded-lg cursor-pointer hover:bg-orange-500 transition duration-150"
                        type="submit" value="Login">
                </form>
                <div class="flex items-center justify-between mt-4 space-y-2">
                    <hr class="flex-grow border-t border-gray-300">
                    <span class="px-2 text-gray-500">or</span>
                    <hr class="flex-grow border-t border-gray-300">
                </div>
                <a href="/auth/google"
                    class="mt-5 px-4 py-3 border-[2px] border-slate-300 flex items-center justify-center gap-4 rounded-lg text-slate-700 hover:border-slate-400 hover:text-slate-900 hover:shadow transition duration-150">
                    <img class="w-6 h-6" src="https://www.svgrepo.com/show/475656/google-color.svg" loading="lazy"
                        alt="google logo">
                    <span>Login with Google</span>
                </a>
                <a href="/register" class="block text-center mt-6 text-orange-600 hover:underline">Don't have an
                    account?</a>
            </div>
        </div>
    </div>


    <script>
        const urlParams = new URLSearchParams(window.location.search);
        const message = urlParams.get('message');
        if (message === 'LF') {
            Swal.fire({
                icon: 'error',
                title: 'Login Failed',
                text: "Invalid Email or Password",
                timer: 2500,
                showConfirmButton: false
            });
        }
    </script>
    <% include ./partials/footer.ejs %>