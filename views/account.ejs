<% include ./partials/header.ejs %>
    <div class="min-h-screen bg-gradient-to-br from-purple-50 to-purple-100 py-10 px-4 flex flex-col items-center">
        <!-- Breadcrumbs -->
        <nav class="w-full max-w-2xl mb-6" aria-label="Breadcrumb">
            <ol class="flex items-center space-x-2 text-sm text-gray-500">
                <li>
                    <a href="/" class="hover:text-purple-700 font-medium flex items-center">
                        <i class="fa fa-home mr-1"></i> Home
                    </a>
                </li>
                <li>
                    <span class="mx-2">/</span>
                </li>
                <li class="text-purple-700 font-semibold">Account</li>
            </ol>
        </nav>
        <div class="w-full max-w-2xl bg-white rounded-3xl shadow-xl p-8 flex flex-col items-center">
            <div class="w-28 h-28 rounded-full border-4 border-purple-200 shadow mb-4 overflow-hidden">
                <img src="<%= user.profile && user.profile !== '' ? user.profile : '/images/default-avatar.png' %>"
                    alt="Profile" class="w-full h-full object-cover"
                    onerror="this.onerror=null;this.src='/images/default-avatar.png';">
            </div>
            <h2 class="text-2xl font-bold text-gray-900 mb-1">
                <%= user.fullname || user.username %>
            </h2>
            <p class="text-purple-700 font-medium mb-4">@<%= user.username %>
            </p>
            <div class="w-full flex flex-col md:flex-row gap-6 mt-4">
                <div class="flex-1">
                    <h3 class="text-lg font-semibold text-gray-800 mb-2">Personal Information</h3>
                    <div class="bg-purple-50 rounded-xl p-4 mb-2">
                        <div class="flex items-center mb-2">
                            <span class="w-32 text-gray-600 font-medium">Full Name:</span>
                            <span class="text-gray-900">
                                <%= user.fullname || '-' %>
                            </span>
                        </div>
                        <div class="flex items-center mb-2">
                            <span class="w-32 text-gray-600 font-medium">Email:</span>
                            <span class="text-gray-900">
                                <%= user.email %>
                            </span>
                        </div>
                        <div class="flex items-center mb-2">
                            <span class="w-32 text-gray-600 font-medium">Username:</span>
                            <span class="text-gray-900">
                                <%= user.username %>
                            </span>
                        </div>
                        <div class="flex items-center mb-2">
                            <span class="w-32 text-gray-600 font-medium">Mobile:</span>
                            <span class="text-gray-900">
                                <%= user.mobile || '-' %>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="flex-1">
                    <h3 class="text-lg font-semibold text-gray-800 mb-2">Order Summary</h3>
                    <div class="bg-purple-50 rounded-xl p-4">
                        <div class="flex items-center mb-2">
                            <span class="w-32 text-gray-600 font-medium">Total Orders:</span>
                            <span class="text-gray-900">
                                <%= user.orders ? user.orders.length : 0 %>
                            </span>
                        </div>
                        <div class="flex items-center mb-2">
                            <span class="w-32 text-gray-600 font-medium">Total Spent:</span>
                            <span class="text-gray-900">â‚¹<%= user.orders ? user.orders.reduce((sum, o)=> sum +
                                    (o.totalPrice || 0), 0) : 0 %></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="w-full flex justify-end mt-8">
                <a href="/logout"
                    class="bg-red-500 hover:bg-red-600 text-white px-6 py-2 rounded-lg font-semibold shadow transition">Logout</a>
            </div>
        </div>
    </div>
    <% include ./partials/footer.ejs %>