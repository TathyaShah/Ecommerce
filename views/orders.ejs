<% include ./partials/header.ejs %>
    <div
        class="min-h-screen w-full bg-gradient-to-br from-blue-100 to-blue-200 flex flex-col items-center justify-center py-10 px-2">
        <div class="w-full max-w-7xl bg-white rounded-2xl shadow-lg flex flex-col md:flex-row md:gap-x-10 p-0 md:p-10">
            <!-- Order Summary Panel -->
            <div
                class="w-full md:w-1/3 flex flex-col justify-between bg-blue-50 rounded-t-2xl md:rounded-l-2xl md:rounded-r-2xl md:rounded-tr-2xl p-6 md:p-8 border-b-2 md:border-b-0 md:border-r-2 border-blue-100">
                <h2 class="text-xl font-bold text-blue-800 mb-6 text-center">Order Summary</h2>
                <div class="space-y-2 mb-6">
                    <div class="flex justify-between text-blue-900">
                        <span>Items</span>
                        <span>3</span> <!-- Placeholder, replace with dynamic value -->
                    </div>
                    <div class="flex justify-between text-blue-900">
                        <span>Subtotal</span>
                        <span>₹1200</span> <!-- Placeholder, replace with dynamic value -->
                    </div>
                    <div class="flex justify-between text-blue-600">
                        <span>Delivery Fee</span>
                        <span>Free</span>
                    </div>
                    <div class="border-t border-blue-200 my-2"></div>
                    <div class="flex justify-between font-bold text-blue-800 text-lg">
                        <span>Total</span>
                        <span>₹1200</span> <!-- Placeholder, replace with dynamic value -->
                    </div>
                </div>
                <div class="flex items-center gap-2 bg-blue-100 rounded-lg px-3 py-2 w-fit mx-auto">
                    <i class="fa fa-lock text-blue-600"></i>
                    <span class="text-blue-700 text-sm font-medium">Secure Payment via Stripe</span>
                </div>
            </div>
            <!-- Payment Form Panel -->
            <div class="w-full md:w-2/3 flex flex-col justify-center p-6 md:p-8">
                <h2 class="text-xl font-bold text-blue-800 mb-6">Card Payment</h2>
                <form id="payment-form" class="space-y-5">
                    <div>
                        <label for="cardName" class="block text-blue-700 font-medium mb-1">Card Holder Name</label>
                        <input type="text" id="cardName" name="cardName" required
                            class="w-full rounded-lg border border-blue-200 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-300"
                            placeholder="Full Name" />
                    </div>
                    <div>
                        <label for="email" class="block text-blue-700 font-medium mb-1">Email</label>
                        <input type="email" id="email" name="email" required
                            class="w-full rounded-lg border border-blue-200 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-300"
                            placeholder="you@email.com" />
                    </div>
                    <div class="flex gap-4">
                        <div class="flex-1">
                            <label for="expiry" class="block text-blue-700 font-medium mb-1">Expiration Date</label>
                            <input type="text" id="expiry" name="expiry"
                                class="w-full rounded-lg border border-blue-200 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-300"
                                placeholder="MM/YY" />
                        </div>
                        <div class="flex-1">
                            <label for="cvv" class="block text-blue-700 font-medium mb-1">CVV</label>
                            <input type="text" id="cvv" name="cvv"
                                class="w-full rounded-lg border border-blue-200 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-300"
                                placeholder="123" />
                        </div>
                    </div>
                    <div>
                        <label class="block text-blue-700 font-medium mb-1">Card Details</label>
                        <!-- Stripe Card Element Placeholder -->
                        <div id="card-element" class="w-full rounded-lg border border-blue-200 px-3 py-4 bg-blue-100">
                        </div>
                    </div>
                    <button type="submit"
                        class="w-full bg-blue-500 text-white rounded-lg py-3 font-semibold text-lg hover:bg-blue-600 transition">Confirm
                        Payment</button>
                </form>
            </div>
        </div>
    </div>
    <% include ./partials/footer.ejs %>